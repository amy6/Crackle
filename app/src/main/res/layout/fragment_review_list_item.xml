<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimens_4dp"
    app:cardElevation="@dimen/dimens_4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            tools:text="Miranda" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_8dp"
            tools:text="Author's review content goes here!" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="@dimen/dimens_48dp"
            android:layout_height="@dimen/dimens_48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimens_8dp"
            android:layout_marginRight="@dimen/dimens_8dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_keyboard_arrow_down"
            android:contentDescription="@string/no_description_available" />

    </LinearLayout>
</android.support.v7.widget.CardView>